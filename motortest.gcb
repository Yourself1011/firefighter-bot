Dir LINE In
Dir PortA.2 In
Dir PortA.3 In
Dir PortA.4 In
Dim flameIn as Byte
Dim Wall1In as Byte
Dim Wall1Dist as Byte

#define FAN PortA.5
dir FAN out

#define LCD_IO 4
#define LCD_RS PortB.0
#define LCD_RW PortB.1
#define LCD_ENABLE PortB.2
#define LCD_DB4 PortB.4
#define LCD_DB5 PortB.5
#define LCD_DB6 PortB.6
#define LCD_DB7 PortB.7
#define LCD_LINES 2
#define LCD_WIDTH 16
#define LCD_SPEED Fast

dir LCD_RS out
dir LCD_RW out
dir LCD_Enable out
dir LCD_DB4 out
dir LCD_DB5 out
dir LCD_DB6 out
dir LCD_DB7 out

RF = 0
RB = 0
LF = 0
LB = 0

